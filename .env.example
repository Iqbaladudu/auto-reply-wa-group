# WhatsApp Auto Reply Bot Configuration

# Total number of instances to run (for load distribution)
TOTAL_INSTANCES=4

# Delay before reading messages (in milliseconds)
MIN_DELAY_BEFORE_READ=500
MAX_DELAY_BEFORE_READ=1000

# Delay before sending reply (in milliseconds)
MIN_DELAY_BEFORE_SEND=700
MAX_DELAY_BEFORE_SEND=1500

# Wait time when rate limited (in milliseconds)
RATE_LIMIT_WAIT_TIME=30000

# Message interval settings
# Minimum time between messages to the same group (in milliseconds)
# Default: 60000 (1 minute)
# Examples:
#   60000 = 1 minute
#   300000 = 5 minutes
#   600000 = 10 minutes
#   1800000 = 30 minutes
#   3600000 = 1 hour
MESSAGE_INTERVAL=60000

# Enable/disable message interval checking
# Set to 'false' to disable, any other value enables it
ENABLE_MESSAGE_INTERVAL=true

# Log level (error, warn, info, debug)
LOG_LEVEL=error
